config {
    pattern "%{iso8601}d [%t] %l %n - %m",
    appenders {
        console "out" {
            stream = "stdout",
            colours = {
                foreground = "green"
            }
        },
        file "log" {
            pattern = "%d %l %n - %m",
            maxLevel = ERROR,
            logFilePath = "/tmp/lua/logs/app.log",
            createMissingDirectories = true
        }
    }
}
